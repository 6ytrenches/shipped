<h2 class="title">Edit: <%= @job.title %></h2>

<div class="container-fluid" id="info">
<%= form_for @job, :html => { :class => "form-horizontal" } do |f| %>
	
	<div class="form-group">
  		<%= f.label :title, class: "control-label col-sm-2" %>
  		<div class="col-sm-10"> 
  			<%= f.text_field :title, class: "form-control" %>
  		</div>
	</div>

	<div class="form-group">
  		<%= f.label :description, class: "control-label col-sm-2" %>
  		<div class="col-sm-10"> 
  			<%= f.text_area :description, size: "44x10", class: "form-control" %>
  		</div>
	</div>

	<div class="form-group">
  		<%= f.label :Cost, class: "control-label col-sm-2" %>
  		<div class="col-sm-10"> 
  			<%= f.number_field :cost_of_job, class: "form-control" %>
  		</div>
	</div>

  	<%= f.hidden_field :user_id, value: current_user.id %>

	<div class="form-group">
		<%= f.label :origin, class: "control-label col-sm-2" %>
		<div class="col-sm-10"> 
			<%= select(:job, :origin, [['nyc', 'nyc'], ['pit', 'pit'], ['ba', 'ba'], ['philly', 'philly'], ['chicago', 'chicago'], ['miami', 'miami'], ['no', 'no'], ['hu','hu'],['la', 'la'], ['ask', 'ask']], {}, {:class => 'form-control'}) %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :destination, class: "control-label col-sm-2" %>
		<div class="col-sm-10"> 
			<%= select(:job, :destination, [['nyc', 'nyc'], ['pit', 'pit'], ['ba', 'ba'], ['philly', 'philly'], ['chicago', 'chicago'], ['miami', 'miami'], ['no', 'no'], ['hu','hu'], ['la', 'la'], ['ask', 'ask']], {}, {:class => 'form-control'}) %>
		</div>
	</div>

	<div class="form-group">
      <div class="col-sm-10 col-sm-offset-5">
        <%= f.submit class: "btn btn-primary" %>
        <%= button_to 'Delete Job',  { action: :destroy, id: @job.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
<% end %>

</div>
