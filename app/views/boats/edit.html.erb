<h2 class="title">Edit: <%= @boat.name %></h2>

<div class="container-fluid" id="info">
<%= form_for @boat, :html => { :class => "form-horizontal" } do |f| %>
	<div class="form-group">
		<%= image_tag @boat.avatar.url(:medium) %>
	</div>
	
	<div class="form-group">
  		<%= f.label "Boat Image", class: "control-label col-sm-2" %>
  		<div class="col-sm-10">
  			<%= f.file_field :avatar, class: "form-control image-uploader" %>
  		</div>
	</div>

	<div class="form-group">
  		<%= f.label :name, class: "control-label col-sm-2" %>
  		<div class="col-sm-10"> 
  			<%= f.text_area :name, class: "form-control" %>
  		</div>
	</div>

	<div class="form-group">
 		<%= f.label "Capacity", class: "control-label col-sm-2" %>
 		<div class="col-sm-10"> 
  			<%= f.number_field :amount_that_can_be_shipped, class: "form-control" %>
  		</div>
	</div>

	<div class="form-group">
		<%= f.label :location, class: "control-label col-sm-2" %>
		<div class="col-sm-10"> 
			<%= select(:boat, :location, [['nyc', 'nyc'], ['pit', 'pit'], ['ba', 'ba'], ['philly', 'philly'], ['chicago', 'chicago'], ['miami', 'miami'], ['no', 'no'], ['hu','hu'],['la', 'la'], ['ask', 'ask']], {}, {:class => 'form-control'}) %>
		</div>
	</div>

	<div class="form-group">
      <div class="col-sm-10 col-sm-offset-5">
        <%= f.submit class: "btn btn-primary" %>
        <%= button_to 'Delete Boat',  { action: :destroy, id: @boat.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>

      </div>
    </div>
<% end %>



</div>
