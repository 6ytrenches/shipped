<h2 class="title">Create a New Boat</h2>

<div class="container-fluid" id="info">
<%= form_for @boat, url: new_boat_path, :html => { :class => "form-horizontal" } do |f| %>

  <% if @boat.errors.any? %>
    <%= pluralize(@boat.errors.count, "error") %>
    Prohibited boats to be assigned
    <% @boat.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
  <% end %>
  
  <div class="form-group">
    <%= f.label "Boat Image", class: "control-label col-sm-2" %>
    <div class="col-sm-10"> 
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-10"> 
      <%= f.text_area :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label "Capacity", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.number_field :amount_that_can_be_shipped, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location, class: "control-label col-sm-2" %>
    <div class="col-sm-10"> 
      <%= select(:boat, :location, [['nyc', 'nyc'], ['pit', 'pit'], ['ba', 'ba'], ['philly', 'philly'], ['chicago', 'chicago'], ['miami', 'miami'], ['no', 'no'], ['hu','hu'],['la', 'la'], ['ask', 'ask']], {}, {:class => 'form-control'}) %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-6">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>

  <% end %>
</div>