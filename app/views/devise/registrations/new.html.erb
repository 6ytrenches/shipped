<h2 class="title">Sign up</h2>

<div class="container-fluid" id="info">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field list-item">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'form-control' %>
  </div>

 <div class="field list-item">
    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: 'form-control' %>
  </div>

  <div class="field list-item">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password - 6 characters minimum",  class: 'form-control'  %>
  </div>

  <div class="field list-item">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: 'form-control'  %>
  </div>
  
  <div class="field list-item">
    <%= f.select :shipper, ["Jobber", "Shipper"], {prompt: "Please Select Your Role"}, class: 'form-control' %>
  </div>

  <div class="actions list-item">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
